#include <ctype.h>
#include <cs50.h>
#include <stdio.h>
#include <string.h>

// Points assigned to each letter of the alphabet
int POINTS[] = {1, 3, 3, 2, 1, 4, 2, 4, 1, 8, 5, 1, 3, 1, 1, 3, 10, 1, 1, 1, 1, 4, 4, 8, 4, 10};

int compute_score(string word);

int main(void)
{
    // Get input words from both players
    string word1 = get_string("Player 1: ");
    string word2 = get_string("Player 2: ");

    // Score both words
    int score1 = compute_score(word1);
    int score2 = compute_score(word2);

    //Print the winner
    if (score1 > score2)
    {
        printf("Player 1 wins!\n");
    }
    if (score1 < score2)
    {
        printf("Player 2 wins!\n");
    }
    if (score1 == score2)
    {
        printf("Tie!\n");
    }
}

int compute_score(string word)
{
    // TODO: Compute and return score for string
    int score = 0;
    //Gets the character length of the word and iterates a for loop for the number of characters in the word, moving through each character of the word
    for (int i = strlen(word); i >= 0; i--)
    {
        //MAKE IF ELSE STATEMENT CHECKING TO SEE IF IT IS A LETTER, OTHERWISE SKIP OVER THIS BIT AND MAKE ANY NON LETTERS WORTH 0
        if (isalpha(word[i]))
        {
            //make all letters uppercase
            if (islower(word[i]))
            {
                word[i] = toupper(word[i]);
            }
            int v = word[i];
            //add them up
            score = score + POINTS[v - 65];
        }
    }
    //repeat taking each character from string as an array, look at int value, subtract to make this value correspond to values in points array (a is [0], b is [1], etc.)
    //take that subsequent number to refer to that points array value and add it to score to output

    return score;
}
